<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemSaveLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/itemImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:visibility="visible"
                android:src="@drawable/icon_place" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/itemNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="sample text : 아이템 장소 이름"
                android:textColor="#000000"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/itemAddressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample text : 아이템 장소 상세 주소"
                android:paddingTop="3dp"
                android:textColor="#8A8888"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
        android:background="#33799EEA"/>

</LinearLayout>
