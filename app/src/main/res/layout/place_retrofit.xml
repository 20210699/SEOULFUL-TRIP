<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/item_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="장소 이름"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_name"
                android:layout_marginTop="3dp"
                android:text="장소 종류"
                android:textColor="#727272"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/item_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_type"
                android:layout_marginTop="3dp"
                android:text="상세설명"
                android:textColor="#727272"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/item_road"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_memo"
                android:layout_marginTop="3dp"
                android:text="주소"
                android:textColor="#727272"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>

            <ImageButton
                android:layout_width="115dp"
                android:layout_height="45dp"
                android:background="@drawable/bluerectangle"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bluestar"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:layout_marginLeft="305dp"
                android:layout_marginTop="13sp"
                android:textSize="15sp"
                android:textColor="#537CC5"/>

            <ImageButton
                android:layout_width="115dp"
                android:layout_height="45dp"
                android:background="@drawable/bluefullrectangle"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="55dp"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도보기"
                android:layout_marginLeft="296dp"
                android:layout_marginTop="63dp"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:src="@drawable/map"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_marginLeft="262dp"
                android:layout_marginTop="57dp"/>

            <!--
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="280dp"
                            android:text="지도보기"/>-->
        </RelativeLayout>


    </RelativeLayout>



</LinearLayout>
