<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seoulfultrip.seoulfultrip.SearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:layout_margin="3dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/backimg"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <EditText
            android:id="@+id/edtProduct2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:singleLine="true"
            android:background="@drawable/searchrectangle"
            android:hint="지역/장소명을 입력해주세요."
            />

        <ImageButton
            android:id="@+id/btnSearch2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/search_1"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:padding="5dp"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/retrofitRecyclerView"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</FrameLayout>