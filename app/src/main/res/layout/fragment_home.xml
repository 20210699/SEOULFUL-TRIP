<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_textbtn"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/searchrectangle"
                android:gravity="left"
                android:hint="검색어를 입력하세요."
                android:inputType="text"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/home_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_textbtn"
                android:background="@drawable/btn_solid"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_search" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_textbtn"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="저장한 경로"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/home_cv"
                android:layout_width="380dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text_home"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#E4EDFF"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingTop="8dp"
                        android:gravity="left"
                        android:textSize="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="여의도" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingTop="8dp"
                        android:gravity="right"
                        android:layout_marginRight="15dp"
                        android:textSize="10dp"
                        android:text="2023-11-20" />

                    <TextView
                        android:id="@+id/start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="7dp"
                        android:text="한강공원"/>

                    <ImageView
                        android:id="@+id/home_line"
                        android:layout_width="170dp"
                        android:layout_height="80dp"
                        android:src="@drawable/line"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/start" />

                    <TextView
                        android:id="@+id/end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/home_line"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:text="타마"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>